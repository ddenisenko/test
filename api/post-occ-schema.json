{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "requestingParty": {
      "type": "string"
    },
    "recipientId": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true     
    },
    "header": {
      "type": "string"
    },
    "body": {
      "type": "string"
    }
  },
  "required": [
    "requestingParty",
    "recipientId",
    "header",
    "body"
  ]
}
